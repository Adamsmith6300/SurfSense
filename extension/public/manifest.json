{
  "manifest_version": 3,

  "name": "SurfSense",
  "description": "Extension to collect Browsing History for SurfSense.",
  "version": "0.0.1",

  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "scripting",
    "unlimitedStorage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
